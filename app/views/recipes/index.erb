<style>
body {
    background-color: lightyellow;
    opacity: 0.9;
}
</style>
<body>

<h1 class="bg-success">Recipes</h1>
<% if logged_in? %>
<h2>Logged in as: <%= current_user.email %></h2>
<% end %>
<ul>
    <% @recipes.each do |recipe| %>
    <li class="bg-info"><a href="/recipes/<%=recipe.id%>"><%= recipe.name %></a></li>
    <% end %>
</ul>

<% if logged_in? %>
<form method="post" action="/logout">
<p class="bg-danger"><input type="submit" value="Log Out"></p>
<% else %>
<h3 class="bg-danger"><a href="/signup">Sign up</a></h3>
</form>
<% end %>
